{% extends "themes/base_admin.html.twig" %}

{% block title %}
    Liste des commentaires
{% endblock %}

{% block description %}
    Consultez la liste des vos commentaires
{% endblock %}

{% block j_query %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block data_tables %}
<link href="https://cdn.datatables.net/v/bs5/dt-2.3.7/datatables.min.css" rel="stylesheet" integrity="sha384-MnxpJFHU9dTMYXshJqBDA0d93sG4KKAFEEzynAaDqcPP7BYh11O5HxbJ6iLDWOXS" crossorigin="anonymous">
 
<script src="https://cdn.datatables.net/v/bs5/dt-2.3.7/datatables.min.js" integrity="sha384-7rAjATpiK3MtvKnoDf5WQz4O8W+3kpl4Jm82apgJgNkeUmZ59yjJT6LqlJpYqhVK" crossorigin="anonymous"></script>

<script>
    $(document).ready( function () {
        $('#table').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/2.3.7/i18n/fr-FR.json',
            }
        });
    } );
</script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des commentaires</h1>

    {% include 'components/_alert.html.twig' %}

    <div class="table-responsive">
        <table id="table" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Utilisateur</th>
                    <th>Article</th>
                    <th>Statut</th>
                    <th>Contenu</th>
                    <th>Ajouté le</th>
                    <th>Activé le</th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{comment.user.firstName}} {{comment.user.lastName}}</td>
                        <td>{{comment.post.title|u.truncate('40', '...')}}</td>
                        <td class="align-middle">
                            <div class="d-flex flex-column justify-content-center align-items-center gap-1 text-center">
                                {% if comment.isActivated %}
                                    <p>Activé le {{comment.activatedAt|format_date()}}</p>
                                {% else %}
                                    <p>Non activé</p>
                                {% endif %}
                                <form action="{{path('app_admin_comment_activate', {'id':comment.id})}}" method="post">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('activate-comment-'~comment.id)}}">
                                    <div class="form-check form-switch">
                                        <input 
                                            class="form-check-input" 
                                            type="checkbox" 
                                            role="switch"
                                            onclick="return confirm('Confirmer cette action?')"
                                            onchange="this.form.submit();"
                                            {{ comment.isActivated ? 'checked' : '' }}
                                        >
                                    </div>
                                </form>
                            </div>
                        </td>
                        <td class="text-center">
                            <a href="#" class="btn btn-sm btn-dark" data-bs-toggle="modal" data-bs-target="#modal-{{comment.id}}">Lire</a>

                            <!-- Modal -->
                            <div class="modal fade" id="modal-{{comment.id}}" tabindex="-1" aria-labelledby="modal-{{comment.id}}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="modal-{{comment.id}}">{{comment.user.firstName}} {{comment.user.lastName}}</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        {{comment.content|nl2br}}
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Fermer</button>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>{{comment.createdAt|format_date()}}</td>
                        <td>{{comment.activatedAt|format_date()}}</td>
                        <td class="d-flex justify-content-center align-items-center gap-1">
                            <form action="{{path('app_admin_comment_delete', {'id':comment.id})}}" method="post">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete-comment-'~comment.id)}}">
                                <input type="submit" class="btn btn-sm btn-danger" value="Supprimer" onclick="return confirm('Confirmer la suppression de ce commentaire?')">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}