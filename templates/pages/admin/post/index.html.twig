{% extends "themes/base_admin.html.twig" %}

{% block title %}
    Liste des articles
{% endblock %}

{% block description %}
    Consultez la liste des vos articles
{% endblock %}

{% block j_query %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block data_tables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-2.3.7/datatables.min.css" rel="stylesheet" integrity="sha384-MnxpJFHU9dTMYXshJqBDA0d93sG4KKAFEEzynAaDqcPP7BYh11O5HxbJ6iLDWOXS" crossorigin="anonymous">
    <script src="https://cdn.datatables.net/v/bs5/dt-2.3.7/datatables.min.js" integrity="sha384-7rAjATpiK3MtvKnoDf5WQz4O8W+3kpl4Jm82apgJgNkeUmZ59yjJT6LqlJpYqhVK" crossorigin="anonymous"></script>
    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/2.3.7/i18n/fr-FR.json',
                }
            });
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des articles</h1>

    {% include 'components/_alert.html.twig' %}

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('app_admin_post_create')}}" class="btn btn-primary shadow"><i class="fa-solid fa-plus"></i> Nouvel article</a>
    </div>

    <div class="table-responsive">
        <table id="table" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Tags</th>
                    <th>Statut</th>
                    <th>Contenu</th>
                    <th>Créé le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center align-items-center gap-1">
                                {% if post.image %}
                                    <img  src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumb') }}" alt="{{ post.title }}">
                                {% else %}
                                    <p class="text-center">---</p>
                                {% endif %}
                            </div>
                        </td>
                        <td>{{post.title}}</td>
                        <td><span class="badge text-bg-primary">{{post.category.name}}</span></td>
                        <td class="text-center">
                            {% for tag in post.tags %}
                                <span class="badge text-bg-secondary">{{tag.name}}</span> 
                            {% endfor %}
                        </td>
                        <td class="align-middle">
                            <div class="d-flex flex-column justify-content-center align-items-center gap-1 text-center">
                                {% if post.isPublished %}
                                    <p>Publié le {{post.publishedAt|format_date()}}</p>
                                {% else %}
                                    <p>Non publié</p>
                                {% endif %}
                                <form action="{{path('app_admin_post_publish', {'id':post.id})}}" method="post">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('publish-post-'~post.id)}}">
                                    <div class="form-check form-switch">
                                        <input 
                                            class="form-check-input" 
                                            type="checkbox" 
                                            role="switch"
                                            onclick="return confirm('Confirmer cette action?')"
                                            onchange="this.form.submit();"
                                            {{ post.isPublished ? 'checked' : '' }}
                                        >
                                    </div>
                                </form>
                            </div>
                        </td>
                        <td>
                            <a href="{{path('app_admin_post_show', {'id':post.id})}}" class="btn btn-sm btn-dark">Lire</a>
                        </td>
                        <td>{{post.createdAt|format_date()}}</td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center align-items-center gap-1">
                                <a href="{{path('app_admin_post_edit', {'id':post.id})}}" class="btn btn-sm btn-secondary">Modifier</a>
                                <form action="{{path('app_admin_post_delete', {'id':post.id})}}" method="post">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('delete-post-'~post.id)}}">
                                    <input type="submit" class="btn btn-sm btn-danger" value="Supprimer" onclick="return confirm('Confirmer la suppression de cet article?')">
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}